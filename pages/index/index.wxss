.home {
  position: relative;
  height: 100vh;
}
.home > .top {
  z-index: 10;
  position: absolute;
  top: 20rpx;
  width: 100%;
  height: 80rpx;
  display: flex;
  padding: 0 30rpx;
  align-items: center;
}
.home > .top .select-city {
  color: #fff;
}
.home > .top .search {
  flex: 1;
  height: 60rpx;
  background-color: #fff;
  border-radius: 40rpx;
  margin-left: 20rpx;
  color: #999;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}
.home .banner .swiper-item {
  height: 100%;
  background-size: 100% 100%;
}
.home .content .filter-box {
  font-size: 28rpx;
}
.home .content .filter-box .price-list {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.home .content .filter-box .price-list .price-item {
  width: 25%;
  text-align: center;
}
.home .content .filter-box .brand-list {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
}
.home .content .filter-box .brand-list .brand-item {
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 25%;
}
.home .content .filter-box .brand-list .brand-item .icon {
  width: 28rpx;
  height: 28rpx;
  background-color: red;
  margin-right: 14rpx;
}
.home .content .car-list {
  display: flex;
  flex-direction: column;
  padding: 0 30rpx 30rpx;
}
.home .content .car-list .item {
  padding: 30rpx 0;
  display: flex;
}
.home .content .car-list .item:nth-of-type(n + 1) {
  border-bottom: 2rpx solid #eee;
}
.home .content .car-list .item .car-img {
  width: 240rpx;
  height: 160rpx;
  background-color: red;
}
.home .content .car-list .item .car-info {
  flex: 1;
  margin-left: 30rpx;
}
.home .content .car-list .item .car-info .car-name {
  font-size: 28rpx;
  font-weight: bold;
  height: 80rpx;
}
.home .content .car-list .item .car-info .year-dis {
  font-size: 24rpx;
}
.home .content .car-list .item .car-info .pay-server {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.home .content .car-list .item .car-info .pay-server .pay {
  display: flex;
  align-items: center;
  color: #FE7243;
  font-weight: bold;
}
.home .content .car-list .item .car-info .pay-server .pay .money {
  font-size: 32rpx;
}
.home .content .car-list .item .car-info .pay-server .pay .first {
  font-size: 24rpx;
}
.home .content .car-list .item .car-info .pay-server .server {
  font-size: 24rpx;
}
