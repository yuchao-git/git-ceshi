.car-image-list {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.car-image-list .tabs {
  overflow-x: auto;
  height: 80rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}
.car-image-list .tabs .tab-item {
  white-space: nowrap;
  font-size: 28rpx;
}
.car-image-list .tabs .tab-item:nth-of-type(n+2) {
  margin-left: 52rpx;
}
.car-image-list .tabs .tab-item.active {
  color: #22AB3E;
}
.car-image-list .content {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx;
}
.car-image-list .content .img-list {
  display: flex;
  flex-wrap: wrap;
}
.car-image-list .content .img-list .img-item {
  width: 224rpx;
  height: 150rpx;
}
.car-image-list .content .img-list .img-item:not(:nth-of-type(3n + 1)) {
  margin-left: 8rpx;
}
.car-image-list .content .img-list .img-item:nth-of-type(n + 4) {
  margin-top: 8rpx;
}
