.modal-component-mask {
  position: fixed;
  z-index: 10000;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.5);
}
.modal-component-mask.hide {
  display: none;
}
.modal-component-mask .content {
  background-color: #fff;
  position: absolute;
  box-sizing: border-box;
}
.modal-component-mask .content .colse {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 36rpx;
  height: 36rpx;
  background: url(https://web-resource.mucang.cn/minprogram/jiakaobaodian/guanbi@2x.png) no-repeat center center / cover;
}
.modal-component-mask .content.center {
  width: 640rpx;
  border-radius: 20rpx;
  padding: 50rpx 30rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.modal-component-mask .content.left {
  top: 0;
  left: 0;
  min-width: 100rpx;
  height: 100%;
  border-radius: 0 20rpx 20rpx 0;
}
.modal-component-mask .content.top {
  top: 0;
  left: 0;
  width: 100%;
  min-height: 100rpx;
  border-radius: 0 0 20rpx 20rpx;
}
.modal-component-mask .content.right {
  top: 0;
  right: 0;
  min-width: 100rpx;
  height: 100%;
  border-radius: 20rpx 0 0 20rpx;
}
.modal-component-mask .content.bottom {
  bottom: 0;
  left: 0;
  width: 100%;
  min-height: 100rpx;
  border-radius: 20rpx 20rpx 0 0;
}
.modal-component-mask .content .title {
  text-align: center;
  color: #333;
  font-size: 36rpx;
  font-weight: bold;
}
.modal-component-mask .content .footer {
  display: flex;
  justify-content: space-between;
}
.modal-component-mask .content .footer .footer-active {
  width: 270rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  border-radius: 60rpx;
  margin-top: 30rpx;
}
.modal-component-mask .content .footer .footer-active.cancle {
  border: 2rpx solid #333;
}
.modal-component-mask .content .footer .footer-active.ok {
  background: linear-gradient(90deg, #00e0e5 0%, #0086fa 100%);
  color: white;
}
